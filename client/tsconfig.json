{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@fb-components/*": [
        "packages/fb-components/application/*",
        "packages/fb-components/common/*",
        "packages/fb-components/globals/*",
        "packages/fb-components/layouts/*",
        "packages/fb-components/forms/*",
        "packages/fb-containers/*",
      ],
      "@fb-contexts/*": [ "packages/fb-contexts/*" ],
      "@fb-containers/*": [ "packages/fb-containers/*", ],
      "@fb-hooks/*": [ "packages/fb-hooks/*" ],
      "@fb-features-recoil/*": [ "packages/fb-features-recoil/*" ],
      "@fb-services/*": [ "packages/fb-services/*" ],
      "@mocks/*" : ["mocks/*"],
      "@views/*": ["views/*" ],
      "@utils/*": [ "utils/*" ],
      "@theme/*": [ "theme/*" ],
      "@config/*": [ "config/*" ]
    },
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": false,
    "removeComments": true,
    "isolatedModules": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noEmit": true,
    "resolveJsonModule": true,
  },
  "exclude": [
    "/node_modules/**/*"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx", 
  ]
}
